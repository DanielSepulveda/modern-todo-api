{
  "extends": "@danielsepulveda/ts-config",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "noEmit": false,
    "paths": {
      "@db/*": ["db/*"],
      "@db": ["db/index"],
      "@errors/*": ["errors/*"],
      "@errors": ["errors/index"],
      "@providers/*": ["providers/*"],
      "@providers": ["providers/index"],
      "@constants/*": ["constants/*"],
      "@constants": ["constants/index"]
    }
  },
  "include": ["src/**/*"]
}
